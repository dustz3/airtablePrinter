// 表格樣式範例檔案
// 您可以複製這些樣式到 main.styl 中來測試不同的效果

// 樣式 1：現代簡約風格
.table-modern
  table
    border-radius 12px
    box-shadow 0 4px 20px rgba(0,0,0,0.1)
    
    th
      background linear-gradient(135deg, #667eea 0%, #764ba2 100%)
      color white
      font-weight 600
      padding 20px 15px
    
    td
      padding 18px 15px
      border-bottom 1px solid #f0f0f0
    
    tr:hover
      background-color #f8f9ff
      transform scale(1.01)
      transition all 0.2s ease

// 樣式 2：商務專業風格
.table-business
  table
    border 2px solid #2c3e50
    
    th
      background #2c3e50
      color white
      font-weight 700
      text-transform uppercase
      letter-spacing 1px
    
    td
      border 1px solid #bdc3c7
      font-weight 500
    
    tr:nth-child(even)
      background-color #ecf0f1

// 樣式 3：活潑色彩風格
.table-colorful
  table
    border-radius 8px
    overflow hidden
    
    th
      background linear-gradient(45deg, #ff6b6b, #4ecdc4)
      color white
      font-weight 600
    
    td
      border-bottom 2px solid #f1f2f6
    
    tr:hover
      background-color #ffeaa7
      color #2d3436

// 樣式 4：極簡風格
.table-minimal
  table
    border none
    box-shadow none
    
    th
      background transparent
      color #2c3e50
      border-bottom 3px solid #3498db
      font-weight 600
    
    td
      border none
      border-bottom 1px solid #ecf0f1
    
    tr:hover
      background-color transparent
      border-left 4px solid #3498db

// 樣式 5：卡片式風格
.table-card
  table
    border-radius 16px
    box-shadow 0 8px 32px rgba(0,0,0,0.1)
    overflow hidden
    
    th
      background #34495e
      color white
      font-weight 600
      padding 25px 20px
    
    td
      padding 20px
      border-bottom 1px solid #ecf0f1
    
    tr:hover
      background-color #f8f9fa
      box-shadow inset 0 0 0 2px #3498db 
// 響應式設計
@media (max-width: 768px)
  .container
    padding 10px
  
  header
    padding 20px 0
    
    h1
      font-size 2em
  
  main
    padding 20px
  
  .action-buttons .btn
    display block
    margin 10px 0
    width 100%

// 列印樣式
@media print
  .selection-panel,
  .action-buttons
    display none
  
  .data-display
    margin 0
    
  table
    box-shadow none
    border 1px solid #000
    
    th, td
      border 1px solid #000 